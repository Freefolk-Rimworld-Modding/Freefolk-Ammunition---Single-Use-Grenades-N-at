<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="Weapon_GrenadeSmoke"]/recipeMaker</xpath>
    <value>
      <productCount>10</productCount>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="Weapon_GrenadeSmoke"]</xpath>
    <value>
      <stackLimit>10</stackLimit>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="Weapon_GrenadeSmoke"]/statBases</xpath>
    <value>
      <MarketValue>32</MarketValue>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Weapon_GrenadeSmoke"]/statBases/Mass</xpath>
    <value>
      <Mass>0.1</Mass>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Weapon_GrenadeSmoke" ]/verbs/li/verbClass</xpath>
    <value>
      <!--<verbClass>Verb_ShootOneUse</verbClass>-->
      <verbClass>SingleUseGnat.Verb_LaunchProjectileOneUse</verbClass>
    </value>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[defName="Weapon_GrenadeSmoke"]</xpath>
    <value>
      <li Class="SingleUseGNAT.GenerateWithEquip">
        <generateEquip>
          <Weapon_GrenadeSmoke>5~10</Weapon_GrenadeSmoke>
        </generateEquip>
      </li>
      <li MayRequire="LimeTreeSnake.Ammunition" Class="Ammunition.DefModExtensions.AmmunitionExtension" />
    </value>
  </Operation>

</Patch>